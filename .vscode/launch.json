    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "启动程序",
            "program": "${workspaceRoot}/src/es6.js",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "node",
            "runtimeArgs": [
                "--harmony-async-await"
            ],
            "args": [
                "--harmony-async-await"
            ],
            "request": "launch",
            "name": "app",
            "program": "${workspaceRoot}/src/app.js",
            "cwd": "${workspaceRoot}",
            "skipFiles": [
                "node_modules/**/*.js"
            ],
            // "envFile": "${workspaceRoot}/.env"
            "env": {
                "NODE_ENV": "prod"
            }
        },
        {
            "type": "node",
            "runtimeArgs": [
                "--harmony-async-await"
            ],
            "args": [
                "--harmony-async-await"
            ],
            "request": "launch",
            "name": "test",
            "program": "${workspaceRoot}/src/test/test.js",
            "cwd": "${workspaceRoot}",
            "skipFiles": [
                "node_modules/**/*.js"
            ],
            // "envFile": "${workspaceRoot}/.env"
            "env": {
                "NODE_ENV": "test"
            }
        }
        // ,
        // {
